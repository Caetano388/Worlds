{
  "events": [
    {
      "id": "clan_split",
      "name": "clan split",
      "target": "faction",
      "assignOn" : ["spawn"],
      "properties": [
        {
          "id": "new_core_group",
          "type": "value",
          "value": "target.polity.get_random_group()"
        }
      ],
      "assignmentConditions": [
        "target.type == clan"
      ],
      "triggerConditions": [
        "target.administrative_load > 0.5",
        "!(target.preferences.cohesion > 0.7)",
        "target.core_group != new_core_group",
        "target.group_can_be_core(new_core_group)"
      ],
      "maxTimeToTrigger": "91250 * target.administrative_load * target.preferences.cohesion",
      "effects": [
        "target.trigger_decision(clan_split, new_core_group)"
      ],
      "repeatable" : true
    }
  ]
}
